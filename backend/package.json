{
  "name": "@kvtm-auto/backend",
  "version": "0.1.0",
  "private": true,
  "description": "KVTM Auto - Backend (Flask + Python)",
  "scripts": {
    "install": "poetry lock && poetry install",
    "dev": "poetry run python src/main.py --env dev",
    "build": "echo 'Backend build: No build step required for Flask'",
    "prod": "poetry run gunicorn -w 4 -b 0.0.0.0:3001 --timeout 120 src.main:app",
    "lint": "poetry run flake8 src/",
    "format": "poetry run black src/ && poetry run isort src/",
    "test": "poetry run pytest",
    "clean": "find . -type d -name '__pycache__' -exec rm -rf {} + 2>/dev/null || true"
  }
}